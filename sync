#!/bin/bash

# Kolmogorov CV Production Sync Script
# Updates, builds, and deploys the application

set -e  # Exit on any error

echo "ðŸš€ Starting Kolmogorov CV production sync..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Step 1: Git pull
print_status "Pulling latest changes from repository..."
if git pull https://github.com/onedal/kolmogorov-cv.git; then
    print_success "Git pull completed successfully"
else
    print_error "Git pull failed!"
    exit 1
fi

# Step 2: Install dependencies (if needed)
print_status "Checking dependencies..."
if [ ! -d "node_modules" ] || [ "package.json" -nt "node_modules" ]; then
    print_status "Installing/updating dependencies..."
    npm install
    print_success "Dependencies updated"
else
    print_status "Dependencies are up to date"
fi

# Step 3: Build application
print_status "Building application for production..."
if npm run build; then
    print_success "Build completed successfully"
else
    print_error "Build failed!"
    exit 1
fi

# Step 4: Stop existing PM2 process
print_status "Stopping existing PM2 process..."
if pm2 list | grep -q "kolmogorov-cv"; then
    pm2 stop kolmogorov-cv
    pm2 delete kolmogorov-cv
    print_success "Existing process stopped"
else
    print_status "No existing process found"
fi

# Step 5: Start new PM2 process
print_status "Starting new PM2 process on port 3090..."
if pm2 start ecosystem.config.cjs; then
    print_success "PM2 process started successfully"
else
    print_error "Failed to start PM2 process!"
    exit 1
fi

# Step 6: Show status
print_status "Checking PM2 status..."
pm2 status

# Step 7: Show logs (last 10 lines)
print_status "Recent logs:"
pm2 logs kolmogorov-cv --lines 10

print_success "ðŸŽ‰ Production sync completed successfully!"
print_status "Application is running on:"
print_status "  Local:   http://localhost:3090"
print_status "  Network: http://$(hostname -I | awk '{print $1}'):3090"
print_status ""
print_status "Useful commands:"
print_status "  pm2 status          - Check status"
print_status "  pm2 logs kolmogorov-cv - View logs"
print_status "  pm2 restart kolmogorov-cv - Restart app"
print_status "  pm2 stop kolmogorov-cv - Stop app"